// CutCard.jsx
import React from 'react';
import './CutCard.scss';

export default function CutCard({ title, children }) {
  return (
    <div className="cut-card">
      <h2 className="cut-card__title">{title}</h2>
      <div className="cut-card__body">{children}</div>
    </div>
  );
}

/* CutCard.scss */
$notch-diameter: 40px;
$notch-radius: $notch-diameter / 2;
$page-bg: #f0f0f0;  /* change to your pageâ€™s background */

.cut-card {
  position: relative;
  overflow: visible;
  background: #fff;
  border: 1px solid #ccc;
  border-radius: 8px;
  padding: 16px;

  /* left & right notches */
  &::before,
  &::after {
    content: '';
    position: absolute;
    width: $notch-diameter;
    height: $notch-diameter;
    background: $page-bg;
    border-radius: 50%;
    top: 50%;
    transform: translateY(-50%);
  }

  &::before { left: -$notch-radius; }
  &::after  { right: -$notch-radius; }

  &__title {
    margin: 0 0 12px;
    font-size: 1.25rem;
    text-align: center;
  }

  &__body {
    /* your body styles here */
  }
}
